<% if @message %>
	<div class="alert alert-danger">
		<%= @message %>
	</div>
<% end %>

<div class="label">
	<span>Selecione o Aluno</span>
</div>

<div class="form-center">
	<%= form_tag search_studants_path, method: :get, class: 'form-group' do %>
		<div>
			<%= text_field_tag :name, @name, class: 'form-control' %><br>
			<%= button_to :buscar, nil, class: 'btn btn-success' %>
		</div>
	<% end %>
</div>
