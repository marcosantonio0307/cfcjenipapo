<div class="label">
	<span>Contas a Pagar</span>
</div>

<%= form_tag expenses_filter_date_path, method: :get, class: 'navbar-form navbar-right' do %>
	<div>
		<%= date_field_tag :begin_date, nil, class: 'form-control' %>
		<%= date_field_tag :end_date, nil, class: 'form-control' %>
		<%= button_to 'Filtrar', nil, class: 'btn btn-success' %>
	</div>
<% end %>

<div class="options">
	<%= link_to 'Nova Conta a Pagar', new_expense_path, class: 'btn btn-primary' %>
</div>

<%= render 'expenses' %>