<div class="label">
	<span>Registrar Aula</span>
</div>

<div class="form-center">

	<%= form_tag new_class_procedure_path, method: :get do %>

		<div class="form-group">
			<%= label_tag :category %><br>
			<%= select_tag :category, options_for_select(@options) %>
		</div>

		<div class="form-group">
			<%= label_tag :hours %>
			<%= number_field_tag :hours, 0, class: 'form-control' %>
		</div>

		<div>
			<%= button_to :salvar, nil, class: 'btn btn-success' %>
		</div>
	<% end %>

</div>