<div class="label">
	<span>Informe o Aluno</span>
</div>

<div class="form-center">
	<%= form_tag search_studants_path, method: :get, class: 'navbar-form' do %>
		<div style="text-align: right;">
			<%= text_field_tag :name, @name, class: 'form-control' %>
			<%= button_to :buscar, nil, class: 'btn btn-success' %>
		</div>
	<% end %>

	<%= form_tag selection_procedure_path, method: :get do %>
		<div>
			<%= label_tag :cpf %>
			<%= text_field_tag :cpf, nil, class: 'form-control' %>
		</div><br>
		<div>
			<%= button_to :selecionar, nil, class: 'btn btn-success' %>
		</div>
	<% end %>
</div>