<div class="label">
	<span>Nova <%= @cash.category %></span>
</div>

<div class="form-center">
	<%= form_for @cash do |f| %>
	
		<div class="form-group">
			<%= f.label :descricao %>
			<%= f.text_field :description, class: 'form-control' %>
		</div>
		<div class="form-group">
			<%= f.label :valor %>
			<%= f.text_field :price, class: 'form-control' %>
		</div>
		<div class="form-group">
			<%= f.submit :salvar, class: 'btn btn-success' %>
		</div>

	<% end %>
</div>